---
import Layout from '../layouts/Layout.astro';
import Header from '../components/nav/Header.astro';
import Footer from '../components/nav/Footer.astro';

const siteUrl = Astro.site?.toString() ?? 'https://akwebsolutions.nl';
const pageUrl = `${siteUrl}/bedankt`;

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: siteUrl,
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Bedankt',
      item: pageUrl,
    },
  ],
};

const webPageSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Bedankt voor je bericht',
  url: pageUrl,
  description: 'Bedankt-pagina van AK Web Solutions. We nemen binnen één werkdag contact op en delen alvast relevante cases en diensten.',
  isPartOf: siteUrl,
};
---

<Layout
  title="Bedankt – AK Web Solutions"
  description="Bedankt voor je bericht aan AK Web Solutions. We reageren binnen één werkdag met de eerste vervolgstappen."
  structuredData={[breadcrumbSchema, webPageSchema]}
>
  <Header />
  <main class="services-basic">
    <section class="services-basic__hero">
      <div class="services-basic__shell">
        <div class="services-basic__hero-content" data-reveal style="text-align: center; max-width: 42rem; margin: 0 auto;">
          <span style="display: inline-block; padding: 0.5rem 1rem; background: rgba(99, 102, 241, 0.1); border: 1px solid rgba(99, 102, 241, 0.2); border-radius: 999px; font-size: 0.875rem; font-weight: 500; color: rgba(99, 102, 241, 0.9); margin-bottom: 1.5rem;">Dank je wel</span>
          <h1>Bedankt voor je bericht!</h1>
          <p style="font-size: 1.125rem;">We nemen binnen één werkdag contact met je op met vervolgstappen. In de tussentijd kun je alvast onze cases en diensten verkennen.</p>
          <div class="services-basic__cta-row" style="margin-top: 2.5rem; justify-content: center;">
            <a href="/cases" class="services-basic__btn services-basic__btn--primary">Bekijk cases</a>
            <a href="/diensten" class="services-basic__btn services-basic__btn--link">Ontdek onze diensten</a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
