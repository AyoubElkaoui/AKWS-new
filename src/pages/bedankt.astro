---
import Layout from '../layouts/Layout.astro';
import Header from '../components/nav/Header.astro';
import Footer from '../components/nav/Footer.astro';

const siteUrl = Astro.site?.toString() ?? 'https://akwebsolutions.nl';
const pageUrl = `${siteUrl}/bedankt`;

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: siteUrl,
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Bedankt',
      item: pageUrl,
    },
  ],
};

const webPageSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Bedankt voor je bericht',
  url: pageUrl,
  description: 'Bedankt-pagina van AK Web Solutions. We nemen binnen Ã©Ã©n werkdag contact op en delen alvast relevante cases en diensten.',
  isPartOf: siteUrl,
};
