---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/home/HeroSection.astro';
import LogoCloud from '../components/home/LogoCloud.astro';
import FeaturesSection from '../components/home/FeaturesSection.astro';
import StatsSection from '../components/home/StatsSection.astro';
import ProcessSection from '../components/home/ProcessSection.astro';
import CTASection from '../components/home/CTASection.astro';
---

<Layout>
    <HeroSection />
    <LogoCloud />
    <FeaturesSection />
    <StatsSection />
    <ProcessSection />
    <CTASection />

    <script>
        import { initSmoothScroll, initTextSplitting, initGSAPAnimations } from '../scripts/animations.js';
        import { initMagneticElements, initTiltEffects, initCounterAnimations, initMorphingEffects, initParallaxEffects } from '../scripts/interactions.js';
        import { initThreeJS } from '../scripts/three-scene.js';
        import { initAdvancedEffects } from '../scripts/advanced-effects.js';

        // Initialize everything when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            initSmoothScroll();
            initTextSplitting();
            initGSAPAnimations();
            initThreeJS();
            initMagneticElements();
            initTiltEffects();
            initCounterAnimations();
            initMorphingEffects();
            initParallaxEffects();
            initAdvancedEffects();
        });
    </script>
</Layout>