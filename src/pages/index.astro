---
import Layout from '../layouts/Layout.astro';
import Header from '../components/nav/Header.astro';
import Footer from '../components/nav/Footer.astro';

import HeroSection from '../components/home/HeroSection.astro';
import TechStackMarquee from '../components/home/TechStackMarquee.astro';
import ServicesNewSection from '../components/home/ServicesNewSection.astro';
import ProcessSection from '../components/home/ProcessSection.astro';
import CaseStudiesSection from '../components/home/CaseStudiesSection.astro';
import WhyUsSection from '../components/home/WhyUsSection.astro';
import CTASection from '../components/home/CTASection.astro';

const siteUrl = Astro.site?.toString() ?? 'https://akwebsolutions.nl';
const organizationSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'AK Web Solutions',
  alternateName: 'AK Websolutions',
  url: siteUrl,
  logo: `${siteUrl}/favicon.svg`,
  email: 'info@akwebsolutions.nl',
  telephone: '+31685722387',
  areaServed: ['NL', 'Utrecht', 'Noord-Holland', 'Baarn', 'Amersfoort', 'Hilversum'],
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Baarn',
    addressRegion: 'Utrecht',
    postalCode: '3740',
    addressCountry: 'NL',
  },
  geo: {
    '@type': 'GeoCoordinates',
    latitude: '52.2117',
    longitude: '5.2878',
  },
  contactPoint: [
    {
      '@type': 'ContactPoint',
      contactType: 'customer service',
      telephone: '+31685722387',
      email: 'info@akwebsolutions.nl',
      areaServed: 'NL',
      availableLanguage: ['Dutch', 'English'],
      contactOption: 'TollFree',
    },
  ],
  sameAs: [
    'https://www.linkedin.com/company/akwebsolutions',
    'https://github.com/AyoubElkaoui',
  ],
  description: 'AK Web Solutions - Strategische websites, SEO optimalisatie en online marketing voor Nederlandse bedrijven. Snelle, moderne websites zonder WordPress bloat.',
  foundingDate: '2023',
  priceRange: '€€',
  knowsAbout: [
    'Webdesign',
    'SEO Optimalisatie',
    'Website Ontwikkeling',
    'Online Marketing',
    'React Development',
    'Next.js',
    'Astro',
    'WordPress Migratie',
  ],
};

const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'AK Web Solutions',
  url: siteUrl,
  potentialAction: {
    '@type': 'SearchAction',
    target: `${siteUrl}/blog?q={search_term_string}`,
    'query-input': 'required name=search_term_string',
  },
};

const localBusinessSchema = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  '@id': `${siteUrl}/#localbusiness`,
  name: 'AK Web Solutions',
  image: `${siteUrl}/favicon.svg`,
  url: siteUrl,
  telephone: '+31685722387',
  email: 'info@akwebsolutions.nl',
  address: {
    '@type': 'PostalAddress',
    streetAddress: '',
    addressLocality: 'Baarn',
    addressRegion: 'Utrecht',
    postalCode: '3740',
    addressCountry: 'NL',
  },
  geo: {
    '@type': 'GeoCoordinates',
    latitude: 52.2117,
    longitude: 5.2878,
  },
  openingHoursSpecification: [
    {
      '@type': 'OpeningHoursSpecification',
      dayOfWeek: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
      opens: '09:00',
      closes: '17:00',
    },
  ],
  priceRange: '€€-€€€',
  servesCuisine: null,
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: '4.9',
    reviewCount: '15',
    bestRating: '5',
    worstRating: '1',
  },
};

const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Website Ontwikkeling & SEO Optimalisatie',
  provider: {
    '@type': 'Organization',
    name: 'AK Web Solutions',
    url: siteUrl,
  },
  serviceType: ['Website Development', 'SEO Optimization', 'Web Design', 'Online Marketing'],
  areaServed: {
    '@type': 'Country',
    name: 'Netherlands',
  },
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'Webdesign & Marketing Diensten',
    itemListElement: [
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Website Ontwikkeling',
          description: 'Snelle, moderne websites gebouwd met Astro, React en Next.js',
        },
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'SEO Optimalisatie',
          description: 'Lokale en technische SEO voor betere vindbaarheid in Google',
        },
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'WordPress Migratie',
          description: 'Migreer van langzame WordPress sites naar moderne tech stack',
        },
      },
    ],
  },
};

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: [
    {
      '@type': 'Question',
      name: 'Hoeveel kost een website laten maken?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'Een professionele website kost tussen €2.500-€8.000 afhankelijk van complexiteit. Bij AK Web Solutions krijg je een snelle, moderne website zonder WordPress bloat, klaar in 2-4 weken.',
      },
    },
    {
      '@type': 'Question',
      name: 'Hoe snel is mijn nieuwe website online?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'Wij bouwen websites in 2-4 weken. Na het strategie gesprek starten we direct met design en development, zodat je snel online kunt.',
      },
    },
    {
      '@type': 'Question',
      name: 'Waarom geen WordPress?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'WordPress is traag en kwetsbaar voor hackers. Wij gebruiken moderne tech (Astro, React, Next.js) die 8x sneller laadt en veel veiliger is. Onze websites scoren 90+ op PageSpeed met 0.4s laadtijd.',
      },
    },
    {
      '@type': 'Question',
      name: 'Zorgen jullie ook voor SEO?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'Ja, elke website komt standaard met technische SEO: snelle laadtijd, mobiel-vriendelijk, gestructureerde data en optimale Core Web Vitals. Voor lokale SEO en contentoptimalisatie bieden we aparte pakketten.',
      },
    },
    {
      '@type': 'Question',
      name: 'Voor wie zijn jullie websites geschikt?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'Onze websites zijn ideaal voor MKB-bedrijven, ZZP\'ers en startups die online vindbaar willen zijn en klanten willen binnenhalen. Van lokale dienstverleners tot e-commerce.',
      },
    },
  ],
};

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: siteUrl,
    },
  ],
};
---

<Layout
  title="Website Laten Maken | Snelle Websites & SEO | AK Web Solutions"
  description="Website laten maken in Baarn, Utrecht en heel Nederland. Geen WordPress, maar snelle moderne websites die klanten binnenhalen. ✓ 0.4s laadtijd ✓ 90+ PageSpeed ✓ 2-4 weken online."
  structuredData={[organizationSchema, websiteSchema, localBusinessSchema, serviceSchema, faqSchema, breadcrumbSchema]}
>
  <Header />
  <main>
    <HeroSection />
    <TechStackMarquee />
    <ServicesNewSection />
    <ProcessSection />
    <CaseStudiesSection />
    <WhyUsSection />
    <CTASection />
  </main>
  <Footer />
</Layout>
