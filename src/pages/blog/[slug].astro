---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/nav/Header.astro';
import Footer from '../../components/nav/Footer.astro';

import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post: CollectionEntry<'blog'>) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: any;
}

const { post } = Astro.props;
const { Content } = await post.render();

const siteUrl = Astro.site?.toString() ?? 'https://akwebsolutions.nl';
const pageUrl = `${siteUrl}/blog/${post.slug}`;

const articleSchema = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: post.data.title,
  description: post.data.description,
  author: {
    '@type': 'Person',
    name: post.data.author,
  },
  datePublished: post.data.pubDate.toISOString(),
  publisher: {
    '@type': 'Organization',
    name: 'AK Web Solutions',
    logo: {
      '@type': 'ImageObject',
      url: `${siteUrl}/logo.png`,
    },
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': pageUrl,
  },
};

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: siteUrl,
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Blog',
      item: `${siteUrl}/blog`,
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: post.data.title,
      item: pageUrl,
    },
  ],
};
---

<Layout
  title={`${post.data.title} | AK Web Solutions Blog`}
  description={post.data.description}
  structuredData={[articleSchema, breadcrumbSchema]}
>
  <Header />
  <main class="blog-article">
    <!-- Article Header -->
    <header class="blog-article__header">
      <div class="blog-article__header-bg" aria-hidden="true">
        <span class="blog-article__grid"></span>
        <span class="blog-article__orb blog-article__orb--left"></span>
        <span class="blog-article__orb blog-article__orb--right"></span>
      </div>
      <div class="blog-article__container">
        <nav class="blog-article__breadcrumb" aria-label="Breadcrumb">
          <a href="/">Home</a>
          <span>/</span>
          <a href="/blog">Blog</a>
          <span>/</span>
          <span aria-current="page">{post.data.title}</span>
        </nav>
        <div class="blog-article__header-content" data-reveal>
          <div class="blog-article__tags">
            {post.data.tags.slice(0, 3).map((tag: string) => (
              <span class="blog-article__tag">{tag}</span>
            ))}
          </div>
          <h1>{post.data.title}</h1>
          <p class="blog-article__description">{post.data.description}</p>
          <div class="blog-article__meta">
            <span class="blog-article__author">{post.data.author}</span>
            <span class="blog-article__divider">•</span>
            <time datetime={post.data.pubDate.toISOString()}>
              {new Date(post.data.pubDate).toLocaleDateString('nl-NL', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}
            </time>
          </div>
        </div>
      </div>
    </header>

    <!-- Article Content -->
    <article class="blog-article__content">
      <div class="blog-article__container">
        <div class="prose" data-reveal>
          <Content />
        </div>
      </div>
    </article>

    <!-- CTA Section -->
    <section class="blog-article__cta">
      <div class="blog-article__cta-glow"></div>
      <div class="blog-article__container">
        <div class="blog-article__cta-content" data-reveal>
          <h2>Hulp nodig met je website?</h2>
          <p>
            Laat mij je helpen met een snellere, betere website die meer klanten oplevert. 
            Neem contact op voor een vrijblijvend adviesgesprek.
          </p>
          <div class="blog-article__cta-actions">
            <a href="/contact" class="blog-article__btn blog-article__btn--primary">
              Neem contact op
            </a>
            <a href="/blog" class="blog-article__btn blog-article__btn--secondary">
              Meer artikelen
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  /* Article Header */
  .blog-article__header {
    position: relative;
    padding: clamp(4rem, 10vw, 6rem) 0 clamp(2rem, 5vw, 3rem);
    overflow: hidden;
  }

  .blog-article__header-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .blog-article__grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(99, 102, 241, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(99, 102, 241, 0.03) 1px, transparent 1px);
    background-size: 3rem 3rem;
    mask-image: radial-gradient(ellipse 80% 50% at 50% 50%, black 40%, transparent 100%);
  }

  .blog-article__orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
  }

  .blog-article__orb--left {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, #6366f1, transparent);
    top: -100px;
    left: -100px;
  }

  .blog-article__orb--right {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, #8b5cf6, transparent);
    top: 100px;
    right: -150px;
  }

  .blog-article__container {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 5vw, 2rem);
  }

  .blog-article__container--narrow {
    max-width: 800px;
  }

  .blog-article__breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: rgba(244, 244, 255, 0.6);
    margin-bottom: 2rem;
  }

  .blog-article__breadcrumb a {
    color: rgba(244, 244, 255, 0.8);
    text-decoration: none;
    transition: color 0.2s;
  }

  .blog-article__breadcrumb a:hover {
    color: #6366f1;
  }

  .blog-article__header-content {
    max-width: 800px;
  }

  .blog-article__tags {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-bottom: 1.5rem;
  }

  .blog-article__tag {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(99, 102, 241, 0.1);
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: #818cf8;
  }

  .blog-article__header h1 {
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    color: #ffffff;
    margin-bottom: 1.5rem;
  }

  .blog-article__description {
    font-size: clamp(1.125rem, 2.5vw, 1.375rem);
    line-height: 1.6;
    color: rgba(244, 244, 255, 0.8);
    margin-bottom: 2rem;
  }

  .blog-article__meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.9375rem;
    color: rgba(244, 244, 255, 0.7);
  }

  .blog-article__author {
    font-weight: 600;
    color: rgba(244, 244, 255, 0.9);
  }

  .blog-article__divider {
    color: rgba(244, 244, 255, 0.3);
  }

  /* Article Content */
  .blog-article__content {
    padding: clamp(3rem, 8vw, 6rem) 0;
    background: linear-gradient(180deg, rgba(10, 11, 15, 0) 0%, rgba(11, 12, 16, 0.5) 100%);
  }

  /* Prose Styling */
  .prose {
    color: rgba(244, 244, 255, 0.85);
    font-size: 1.0625rem;
    line-height: 1.8;
    max-width: 100%;
  }

  .prose h1 {
    font-size: clamp(2rem, 5vw, 2.75rem);
    font-weight: 800;
    color: #ffffff;
    margin-top: 0;
    margin-bottom: 1.5rem;
    line-height: 1.15;
  }

  .prose h2 {
    font-size: clamp(1.75rem, 4vw, 2.25rem);
    font-weight: 700;
    color: #ffffff;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    line-height: 1.2;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid rgba(99, 102, 241, 0.2);
  }

  .prose h3 {
    font-size: clamp(1.375rem, 3vw, 1.75rem);
    font-weight: 700;
    color: #ffffff;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .prose h4 {
    font-size: 1.25rem;
    font-weight: 600;
    color: rgba(244, 244, 255, 0.95);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .prose p {
    margin-bottom: 1.5rem;
  }

  .prose strong {
    color: #ffffff;
    font-weight: 700;
  }

  .prose a {
    color: #6366f1;
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-thickness: 2px;
    transition: all 0.2s ease;
  }

  .prose a:hover {
    color: #818cf8;
    text-decoration-color: #818cf8;
  }

  .prose ul, .prose ol {
    margin: 1.5rem 0;
    padding-left: 1.75rem;
  }

  .prose ul {
    list-style: none;
    padding-left: 0;
  }

  .prose ul li {
    position: relative;
    padding-left: 2rem;
    margin-bottom: 0.75rem;
  }

  .prose ul li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: #6366f1;
    font-weight: bold;
    font-size: 1.1em;
  }

  .prose ol {
    counter-reset: item;
  }

  .prose ol li {
    counter-increment: item;
    margin-bottom: 0.75rem;
  }

  .prose ol li::marker {
    color: #6366f1;
    font-weight: bold;
  }

  .prose code {
    padding: 0.25rem 0.5rem;
    background: rgba(99, 102, 241, 0.1);
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: 0.375rem;
    font-size: 0.9em;
    font-family: 'Courier New', monospace;
    color: #818cf8;
  }

  .prose pre {
    padding: 1.5rem;
    background: rgba(15, 16, 20, 0.8);
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .prose pre code {
    padding: 0;
    background: none;
    border: none;
    color: rgba(244, 244, 255, 0.9);
  }

  .prose blockquote {
    border-left: 4px solid #6366f1;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: rgba(244, 244, 255, 0.7);
    background: rgba(99, 102, 241, 0.05);
    padding: 1.5rem;
    border-radius: 0.5rem;
  }

  .prose img {
    border-radius: 0.75rem;
    margin: 2rem 0;
    max-width: 100%;
    height: auto;
  }

  .prose hr {
    border: none;
    border-top: 2px solid rgba(99, 102, 241, 0.2);
    margin: 3rem 0;
  }

  /* CTA Section */
  .blog-article__cta {
    position: relative;
    padding: clamp(4rem, 10vw, 8rem) 0;
    overflow: hidden;
  }

  .blog-article__cta-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.15), transparent 70%);
    filter: blur(60px);
    pointer-events: none;
  }

  .blog-article__cta-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .blog-article__cta h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    color: #ffffff;
    margin-bottom: 1rem;
  }

  .blog-article__cta p {
    font-size: clamp(1.0625rem, 2.5vw, 1.25rem);
    color: rgba(244, 244, 255, 0.8);
    line-height: 1.6;
    margin-bottom: 2.5rem;
  }

  .blog-article__cta-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .blog-article__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0.75rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .blog-article__btn--primary {
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    color: #ffffff;
    box-shadow: 0 4px 20px rgba(99, 102, 241, 0.3);
  }

  .blog-article__btn--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(99, 102, 241, 0.4);
  }

  .blog-article__btn--secondary {
    background: rgba(99, 102, 241, 0.1);
    color: #ffffff;
    border: 1px solid rgba(99, 102, 241, 0.3);
  }

  .blog-article__btn--secondary:hover {
    background: rgba(99, 102, 241, 0.2);
    border-color: rgba(99, 102, 241, 0.5);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-article__cta-actions {
      flex-direction: column;
    }

    .blog-article__btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
