---
import Layout from '../layouts/Layout.astro';
import Header from '../components/nav/Header.astro';
import Footer from '../components/nav/Footer.astro';
import IconBadge from '../components/ui/IconBadge.astro';

const siteUrl = Astro.site?.toString() ?? 'https://akwebsolutions.nl';
const pageUrl = `${siteUrl}/over`;

const heroStats = [
  { value: '12', label: 'Projecten per jaar' },
  { value: '18 mnd', label: 'Gem. samenwerking' },
  { value: '<1 s', label: 'Focus op laadtijd' },
];

const heroHighlights = [
  {
    icon: { set: 'heroicons-outline', name: 'users' },
    title: 'Compact kernteam',
    body: 'Strategen, designers, developers en marketeers die in één sprint samenwerken.',
  },
  {
    icon: { set: 'heroicons-outline', name: 'presentation-chart-line' },
    title: 'Data als leidraad',
    body: 'Dashboards en KPI’s sturen iedere sprint. Zo weet je exact wat er werkt.',
  },
  {
    icon: { set: 'heroicons-outline', name: 'chat-bubble-left-right' },
    title: 'Directe communicatie',
    body: 'Je spreekt met makers. Korte lijnen, weinig lagen, beslissingen en uitvoering in één call.',
  },
];

const values = [
  {
    icon: { set: 'heroicons-outline', name: 'light-bulb' },
    title: 'Heldere strategie',
    description: 'We starten met data, gesprekken en een plan dat voor iedereen duidelijk is.',
    tone: 'violet',
    glow: 'rgba(122, 70, 255, 0.42)',
  },
  {
    icon: { set: 'heroicons-outline', name: 'cpu-chip' },
    title: 'Design + performance',
    description: 'Design is pas af wanneer het snel laadt, vindbaar is en conversie oplevert.',
    tone: 'violet',
    glow: 'rgba(122, 70, 255, 0.42)',
  },
  {
    icon: { set: 'heroicons-outline', name: 'arrow-path' },
    title: 'Samen implementeren',
    description: 'We werken als verlengstuk van je team: transparant, pragmatisch en gericht op impact.',
    tone: 'violet',
    glow: 'rgba(122, 70, 255, 0.42)',
  },
];

const teamFacts = [
  { label: 'Projecten per jaar', value: '12' },
  { label: 'Gemiddelde samenwerking', value: '18 mnd' },
  { label: 'Minimale laadtijd', value: '< 1 s' },
];

const squads = [
  {
    title: 'Strategie & project',
    body: 'Analyse, roadmap, copywriting en projectmanagement. We zorgen dat elke sprint resultaat oplevert en jij weet wat de volgende stap is.',
    glow: 'rgba(122, 70, 255, 0.34)',
  },
  {
    title: 'Design & content',
    body: 'UX, UI, design systems en contentcreatie. Zo blijft jouw verhaal helder, onderscheidend en conversiegericht.',
    glow: 'rgba(122, 70, 255, 0.34)',
  },
  {
    title: 'Development & growth',
    body: 'Astro/Next.js development, koppelingen, analytics, SEO/SEA en automation. Alles voor schaalbare groei.',
    glow: 'rgba(122, 70, 255, 0.34)',
  },
];

const principles = [
  {
    icon: { set: 'heroicons-outline', name: 'calendar-days' },
    title: 'Altijd zicht op de sprint',
    description: 'Iedere twee weken ontvang je een planning, deliverables en demo. Geen verrassingen, wel tempo.',
  },
  {
    icon: { set: 'heroicons-outline', name: 'chart-bar' },
    title: 'Data stuurt de keuzes',
    description: 'We meten alles: snelheid, leads en conversie. Resultaten bepalen de volgende experimenten.',
  },
  {
    icon: { set: 'heroicons-outline', name: 'chat-bubble-bottom-center-text' },
    title: 'Direct contact met makers',
    description: 'Je praat met de mensen die het werk doen. Korte lijntjes, snelle iteraties en duidelijke feedbackloops.',
  },
];

const faqs = [
  {
    question: 'Met wat voor type bedrijven werken jullie?',
    answer: 'We werken vooral met scale-ups, marketingteams en bedrijven die hun digitale fundament willen versterken. Zowel B2B als B2C komt voorbij.',
  },
  {
    question: 'Werken jullie remote of on-site?',
    answer: 'We werken hoofdzakelijk remote maar plannen regelmatig sessies op locatie wanneer dat waarde toevoegt, bijvoorbeeld bij kick-offs of designreviews.',
  },
  {
    question: 'Welke disciplines zitten in jullie kernteam?',
    answer: 'Strategie, projectmanagement, UX/UI design, development, content, SEO/SEA en automation. We schakelen trusted specialisten in wanneer nodig.',
  },
];

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqs.map((item) => ({
    '@type': 'Question',
    name: item.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: item.answer,
    },
  })),
};

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: siteUrl,
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Over ons',
      item: pageUrl,
    },
  ],
};

const aboutSchema = {
  '@context': 'https://schema.org',
  '@type': 'AboutPage',
  name: 'Over AK Web Solutions',
  url: pageUrl,
  description: 'Maak kennis met het team van AK Web Solutions: strategen, designers, developers en marketeers die digitale groei realiseren.',
  primaryImageOfPage: `${siteUrl}/favicon.svg`,
  relatedLink: `${siteUrl}/diensten`,
};
---

<Layout
  title="Over ons – AK Web Solutions"
  description="Leer het team van AK Web Solutions kennen. Wij combineren strategie, design, development en marketing om digitale groei te realiseren."
  structuredData={[breadcrumbSchema, aboutSchema, faqSchema]}
>
  <Header />
  <main>
    <section class="team-hero">
      <div class="team-hero__bg" aria-hidden="true">
        <span class="team-hero__grid"></span>
        <span class="team-hero__orb team-hero__orb--left"></span>
        <span class="team-hero__orb team-hero__orb--right"></span>
        <span class="team-hero__flare"></span>
      </div>
      <div class="team-hero__shell">
        <div class="team-hero__intro" data-reveal>
          <span class="team-hero__tag">Over ons</span>
          <h1>Het team dat techniek, design en marketing aan elkaar smeedt.</h1>
          <p>We zijn een klein, multidisciplinair team. Strategie, design, development en marketing zitten bij elkaar aan tafel en bewegen in sprints.</p>
          <div class="team-hero__actions">
            <a class="hero-btn hero-btn--primary" href="/contact">Plan een kennismaking</a>
            <a class="hero-btn hero-btn--ghost" href="/aanpak">Bekijk aanpak</a>
          </div>
        </div>
        <div class="team-hero__stats">
          {heroStats.map((metric, index) => (
            <div class="team-hero__stat" data-reveal style={`--reveal-delay: ${index * 0.08}s`}>
              <strong>{metric.value}</strong>
              <span>{metric.label}</span>
            </div>
          ))}
        </div>
        <div class="team-hero__highlights">
          {heroHighlights.map((item, index) => (
            <article class="team-highlight tilt-card" data-reveal style={`--reveal-delay: ${index * 0.1}s`}>
              <span class="team-highlight__icon">
                <IconBadge set={item.icon.set} name={item.icon.name} width={24} color="rgba(244,244,255,0.92)" />
              </span>
              <h3>{item.title}</h3>
              <p>{item.body}</p>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="pulse-section">
      <div class="pulse-shell">
        <header class="pulse-intro" data-reveal>
          <span class="pulse-eyebrow">In cijfers</span>
          <h2 class="pulse-title">Een compact team met enterprise-impact.</h2>
          <p class="pulse-copy">We werken bewust met een beperkt aantal projecten per jaar zodat we diep kunnen samenwerken en snelheid houden.</p>
        </header>
        <div class="pulse-metrics">
          {teamFacts.map((fact, index) => (
            <div class="pulse-metric" data-reveal style={`--reveal-delay: ${index * 0.06}s`}>
              <strong>{fact.value}</strong>
              <span>{fact.label}</span>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="pulse-section">
      <div class="pulse-shell">
        <header class="pulse-intro" data-reveal>
          <span class="pulse-eyebrow">Onze waarden</span>
          <h2 class="pulse-title">Strategie, design en growth in één team.</h2>
          <p class="pulse-copy">We combineren high-end design met performance en groei. Dit zijn de principes waarop ieder traject gebouwd is.</p>
        </header>
        <div class="pulse-grid pulse-grid--3">
          {values.map((value, index) => (
            <article class="pulse-card tilt-card" data-reveal style={`--reveal-delay: ${index * 0.08}s`}>
              <span class="pulse-card__icon">
                <IconBadge set={value.icon.set} name={value.icon.name} width={26} color="rgba(244,244,255,0.92)" />
              </span>
              <h3 class="pulse-card__title">{value.title}</h3>
              <p class="pulse-card__body">{value.description}</p>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="pulse-section">
      <div class="pulse-shell">
        <header class="pulse-intro" data-reveal>
          <span class="pulse-eyebrow">Wie je aan tafel krijgt</span>
          <h2 class="pulse-title">Alle disciplines die je nodig hebt voor groei.</h2>
          <p class="pulse-copy">We werken met een vaste kern van strategen, designers, developers en marketeers. Afhankelijk van je project schalen we op met trusted specialists.</p>
        </header>
        <div class="pulse-grid pulse-grid--3">
          {squads.map((squad, index) => (
            <article class="pulse-card tilt-card" data-reveal style={`--reveal-delay: ${index * 0.08}s`}>
              <h3 class="pulse-card__title">{squad.title}</h3>
              <p class="pulse-card__body">{squad.body}</p>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="pulse-section">
      <div class="pulse-shell">
        <header class="pulse-intro" data-reveal>
          <span class="pulse-eyebrow">Hoe we samenwerken</span>
          <h2 class="pulse-title">Eenvoudige afspraken, korte lijnen.</h2>
          <p class="pulse-copy">Dit zijn de principes die elk project sturen.</p>
        </header>
        <div class="pulse-grid pulse-grid--3">
          {principles.map((principle, index) => (
            <article class="pulse-card tilt-card" data-reveal style={`--reveal-delay: ${index * 0.08}s`}>
              <span class="pulse-card__icon">
                <IconBadge set={principle.icon.set} name={principle.icon.name} width={24} color="rgba(244,244,255,0.92)" />
              </span>
              <h3 class="pulse-card__title">{principle.title}</h3>
              <p class="pulse-card__body">{principle.description}</p>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="pulse-section">
      <div class="pulse-shell">
        <header class="pulse-intro" data-reveal>
          <span class="pulse-eyebrow">FAQ</span>
          <h2 class="pulse-title">Veelgestelde vragen over AK Web Solutions.</h2>
          <p class="pulse-copy">Dit zijn de vragen die we het vaakst krijgen wanneer organisaties meer willen weten over ons team en onze werkwijze.</p>
        </header>
        <div class="faq-list">
          {faqs.map((item, index) => (
            <details class="faq-item" data-reveal style={`--reveal-delay: ${index * 0.1}s`}>
              <summary>{item.question}</summary>
              <p>{item.answer}</p>
            </details>
          ))}
        </div>
      </div>
    </section>

    <section class="pulse-section">
      <div class="pulse-shell">
        <article class="pulse-cta" data-reveal>
          <span class="pulse-eyebrow">Kennismaken?</span>
          <h2 class="pulse-title">Plan een sessie met het kernteam.</h2>
          <p class="pulse-copy">In 45 minuten laten we zien hoe we werken, welke resultaten je kunt verwachten en hoe de eerste sprint eruitziet.</p>
          <div class="pulse-cta__actions">
            <a class="hero-btn hero-btn--primary" href="/contact">Plan een call</a>
            <a class="hero-btn hero-btn--ghost" href="/cases">Bekijk projecten</a>
          </div>
        </article>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
