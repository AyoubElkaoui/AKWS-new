---
import logo from '../../assets/fulllogo_transparent_nobuffer.png';

const services = [
  'Websites bouwen',
  'SEO optimalisatie',
  'SEA campagnes',
  'Hosting & onderhoud',
  'IT-oplossingen',
  'Software maatwerk',
];

const links = [
  { href: '/diensten', label: 'Diensten' },
  { href: '/cases', label: 'Cases' },
  { href: '/over', label: 'Over ons' },
  { href: '/contact', label: 'Contact' },
];

const socials = [
  { href: 'https://www.linkedin.com/company/ak-web-solutions-nl', label: 'LinkedIn' },
  { href: 'https://facebook.com/people/AK-Web-Solutions/61573229608493', label: 'Facebook' },
  { href: 'https://instagram.com/akwebsolutions', label: 'Instagram' },
];
---

<footer class="footer-modern">
  <!-- Background effects -->
  <div class="footer-modern__bg">
    <div class="footer-modern__gradient"></div>
  </div>

  <div class="footer-modern__shell">
    <div class="footer-modern__wrap">
      <!-- Brand Column -->
      <div class="footer-modern__brand">
        <a href="/" class="footer-modern__logo">
          <img src={logo.src} alt="AK Web Solutions" width="220" height="52" loading="lazy" decoding="async" />
        </a>
        <p class="footer-modern__tagline">
          Snelle websites met moderne technologie. Van website bouwen tot online marketing - alles onder één dak.
        </p>
        <div class="footer-modern__socials">
          {socials.map((social) => (
            <a href={social.href} target="_blank" rel="noopener noreferrer" class="footer-modern__social">
              {social.label}
            </a>
          ))}
        </div>
      </div>

      <!-- Links Columns -->
      <div class="footer-modern__nav">
        <div class="footer-modern__group">
          <h4 class="footer-modern__title">Diensten</h4>
          <ul class="footer-modern__list">
            {services.map((service) => (
              <li class="footer-modern__item">{service}</li>
            ))}
          </ul>
        </div>
        
        <div class="footer-modern__group">
          <h4 class="footer-modern__title">Menu</h4>
          <ul class="footer-modern__list">
            {links.map((item) => (
              <li class="footer-modern__item">
                <a href={item.href} class="footer-modern__link">{item.label}</a>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Contact Column -->
      <div class="footer-modern__contact">
        <h4 class="footer-modern__title">Direct contact</h4>
        <p class="footer-modern__desc">Bel of mail ons. We reageren binnen 1 werkdag.</p>
        
        <div class="footer-modern__contact-list">
          <div class="footer-modern__contact-item">
            <span class="footer-modern__contact-label">E-mail</span>
            <a href="mailto:info@akwebsolutions.nl" class="footer-modern__contact-link">info@akwebsolutions.nl</a>
          </div>
          <div class="footer-modern__contact-item">
            <span class="footer-modern__contact-label">Telefoon</span>
            <a href="tel:+31685722387" class="footer-modern__contact-link">+31 (0)6 85 72 23 87</a>
          </div>
          <div class="footer-modern__contact-item">
            <span class="footer-modern__contact-label">Locatie</span>
            <p class="footer-modern__contact-text">Baarn, Nederland</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer-modern__bottom">
      <span class="footer-modern__copy">© {new Date().getFullYear()} AK Web Solutions. Alle rechten voorbehouden.</span>
      <div class="footer-modern__legal">
        <a href="/privacy" class="footer-modern__legal-link">Privacy</a>
        <a href="/terms" class="footer-modern__legal-link">Voorwaarden</a>
        <a href="/cookies" class="footer-modern__legal-link">Cookies</a>
      </div>
    </div>
  </div>
</footer>
