---
const services = [
  'Websites bouwen',
  'SEO optimalisatie',
  'SEA campagnes',
  'Hosting & onderhoud',
  'IT-oplossingen',
  'Software maatwerk',
];

const links = [
  { href: '/diensten', label: 'Diensten' },
  { href: '/cases', label: 'Cases' },
  { href: '/aanpak', label: 'Aanpak' },
  { href: '/over', label: 'Over ons' },
  { href: '/contact', label: 'Contact' },
];

const socials = [
  { href: 'https://www.linkedin.com/company/ak-web-solutions-nl', label: 'LinkedIn' },
  { href: 'https://facebook.com/people/AK-Web-Solutions/61573229608493', label: 'Facebook' },
  { href: 'https://instagram.com/akwebsolutions', label: 'Instagram' },
];
---

<footer class="orb-section orb-footer" id="contact">
  <span class="orb-bubble" style="--orb-x: 12%; --orb-y: -14%; --orb-size: 34rem; --orb-color: rgba(122, 70, 255, 0.22);"></span>
  <span class="orb-bubble" style="--orb-x: 86%; --orb-y: 26%; --orb-size: 34rem; --orb-color: rgba(52, 132, 255, 0.18);"></span>

  <div class="orb-shell">
    <div class="footer-wrap">
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <img src="/src/assets/fulllogo_transparent_nobuffer.png" alt="AK Web Solutions" width="220" height="64" loading="lazy" decoding="async" />
        </a>
        <p class="footer-note">
          Wij helpen groeiende organisaties met snelle websites, schaalbare funnels en ongoing optimalisatie. Eén partner voor techniek, marketing en design.
        </p>
        <div class="footer-socials">
          {socials.map((social) => (
            <a href={social.href} target="_blank" rel="noreferrer" class="footer-social">
              {social.label}
            </a>
          ))}
        </div>
      </div>

      <div class="footer-nav">
        <div class="footer-group">
          <h4>Diensten</h4>
          <ul>
            {services.map((service) => (
              <li>{service}</li>
            ))}
          </ul>
        </div>
        <div class="footer-group">
          <h4>Menu</h4>
          <ul>
            {links.map((item) => (
              <li>
                <a href={item.href} class="footer-link">{item.label}</a>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <div class="footer-contact">
        <h4>Laten we kennismaken</h4>
        <p>Plan een call of mail ons direct – we reageren binnen één werkdag.</p>
        <div class="footer-contact__grid">
          <div>
            <span>Mail</span>
            <a href="mailto:info@akwebsolutions.nl">info@akwebsolutions.nl</a>
          </div>
          <div>
            <span>Telefoon</span>
            <a href="tel:+31685722387">+31 (0)6 85 72 23 87</a>
          </div>
          <div>
            <span>Locatie</span>
            <p>Baarn • Nederland</p>
          </div>
        </div>
        <a href="/contact" class="hero-btn hero-btn--primary">Plan een strategiecall</a>
      </div>
    </div>

    <div class="orb-footer__legal">
      <span>© {new Date().getFullYear()} AK Web Solutions. Alle rechten voorbehouden.</span>
      <div class="orb-footer__legal-links">
        <a href="/privacy">Privacy</a>
        <a href="/terms">Voorwaarden</a>
        <a href="/cookies">Cookies</a>
      </div>
    </div>
  </div>
</footer>
