  {
    name: 'ProbandenService',
    industry: 'Automotive & bandenservice',
    result: 'Nieuwe merkpositie + meer aanvragen uit lokale campagnes',
    initials: 'PS',
    tagline: 'Branding • Leadgeneratie • CRO',
    accent: 'linear-gradient(135deg, rgba(122, 70, 255, 0.55), rgba(46, 130, 255, 0.45))',
    glow: 'rgba(122, 70, 255, 0.48)',
    url: 'https://probandenservice.nl',
  },
  {
    name: 'MBA Installaties',
    industry: 'Installatietechniek',
    result: 'Leadmachine met offerteflow en SEO-content',
    initials: 'MBA',
    tagline: 'Next.js • Offerteflow • SEO',
    accent: 'linear-gradient(135deg, rgba(78, 169, 255, 0.5), rgba(37, 83, 255, 0.45))',
    glow: 'rgba(78, 169, 255, 0.45)',
    url: 'https://mba-installaties.nl',
  },
  {
    name: "Loen’s Collection",
    industry: 'Fashion & retail',
    result: 'Headless shop met storytelling en conversie-optimalisatie',
    initials: 'LC',
    tagline: 'Storytelling • Headless commerce',
    accent: 'linear-gradient(135deg, rgba(237, 137, 255, 0.45), rgba(78, 86, 255, 0.4))',
    glow: 'rgba(237, 137, 255, 0.42)',
    url: 'https://loenscollection.nl',
  },
  {
    name: 'Fun Studios',
    industry: 'Entertainment',
    result: 'Brand refresh + ticket funnel voor events',
    initials: 'FS',
    tagline: 'UX • Ticketing • Marketing automation',
    accent: 'linear-gradient(135deg, rgba(255, 168, 105, 0.45), rgba(104, 88, 255, 0.4))',
    glow: 'rgba(255, 168, 105, 0.42)',
    url: 'https://funstudios.nl',
  },
  {
    name: 'AD Loodgietersbedrijf',
    industry: 'Service & onderhoud',
    result: 'Lokale SEO topper met directe offerte aanvragen',
    initials: 'AD',
    tagline: 'Local SEO • Automatische leads',
    accent: 'linear-gradient(135deg, rgba(96, 224, 255, 0.5), rgba(68, 98, 255, 0.4))',
    glow: 'rgba(96, 224, 255, 0.42)',
    url: 'https://ad-loodgietersbedrijf.nl',
  },
];
---

<section id="showcases" class="orb-section" data-variant="showcases">
  <span class="orb-bubble" style="--orb-x: 18%; --orb-y: -12%; --orb-size: 42rem; --orb-color: rgba(122, 70, 255, 0.26);"></span>
  <span class="orb-bubble" style="--orb-x: 78%; --orb-y: 88%; --orb-size: 36rem; --orb-color: rgba(52, 132, 255, 0.2);"></span>

  <div class="orb-shell">
    <header class="orb-intro">
      <span class="orb-tag">Recent werk</span>
      <h2 class="orb-title">Cases die laten zien hoe we strategie vertalen naar resultaat.</h2>
      <p class="orb-copy">
        Van B2B installateurs tot lifestyle merken: elke case draait om meetbare groei. Een selectie van projecten waar we trots op zijn.
      </p>
    </header>

    <div class="orb-grid orb-grid--cases">
      {showcases.map((item, index) => (
        <article
          class="orb-card orb-card--showcase interactive-card tilt-card"
          data-reveal
          style={`--reveal-delay: ${index * 0.08}s; --card-glow: ${item.glow};`}
        >
          <span class="card-glow" aria-hidden="true"></span>
          <figure class="orb-showcase__thumb" style={`--showcase-accent: ${item.accent}`}>
            <span class="orb-showcase__initials">{item.initials}</span>
            <span class="orb-showcase__tagline">{item.tagline}</span>
          </figure>
          <div class="orb-case__meta">
            <span>{item.name}</span>
            <span>{item.industry}</span>
          </div>
          <div class="orb-card__content">
            <p class="orb-card__body">{item.result}</p>
          </div>
          <div class="orb-case__result">
            <span>Bekijk live</span>
            <a href={item.url} target="_blank" rel="noreferrer" aria-label={`Bekijk ${item.name}`}>
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
