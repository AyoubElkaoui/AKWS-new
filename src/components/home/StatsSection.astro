---
import { Activity, TrendingUp, Target, Clock, Users, Award, Zap, Globe } from 'lucide-astro';
---

<section class="stats-section" data-gsap="batch">
    <div class="container">
        <div class="stats-header">
            <h2 class="stats-title" data-gsap="fadeUp" data-splitting>
                Bewezen <span class="gradient-text">resultaten</span> die spreken
            </h2>
            <p class="stats-description" data-gsap="fadeUp" data-delay="0.1">
                Cijfers liegen niet. Onze klanten zien echte groei.
            </p>
        </div>

        <div class="stats-grid">
            <div class="stat-card stat-premium" data-gsap="slideUp" data-delay="0" data-tilt>
                <div class="stat-border"></div>
                <div class="stat-bg-pattern"></div>
                <div class="stat-icon-container">
                    <div class="stat-icon stat-icon-websites">
                        <Rocket size={28} class="stat-pulse" />
                        <div class="icon-orbit">
                            <div class="orbit-dot orbit-1"></div>
                            <div class="orbit-dot orbit-2"></div>
                            <div class="orbit-dot orbit-3"></div>
                        </div>
                    </div>
                </div>
                <div class="stat-content">
                    <div class="stat-number-container">
                        <div class="stat-number counter" data-target="150" data-suffix="+">0</div>
                        <div class="stat-trend">
                            <TrendingUp size={16} />
                            <span>+23 deze maand</span>
                        </div>
                    </div>
                    <div class="stat-label">Websites gelanceerd</div>
                    <div class="stat-description">Elk project een succes verhaal</div>
                </div>
                <div class="stat-glow stat-glow-blue"></div>
                <div class="stat-particles">
                    <div class="particle particle-1"></div>
                    <div class="particle particle-2"></div>
                    <div class="particle particle-3"></div>
                </div>
            </div>

            <div class="stat-card stat-premium" data-gsap="slideUp" data-delay="0.1" data-tilt>
                <div class="stat-border"></div>
                <div class="stat-bg-pattern"></div>
                <div class="stat-icon-container">
                    <div class="stat-icon stat-icon-satisfaction">
                        <Award size={28} class="stat-pulse" />
                        <div class="satisfaction-ring">
                            <svg width="60" height="60" viewBox="0 0 60 60">
                                <circle cx="30" cy="30" r="25" fill="none" stroke="rgba(34,197,94,0.2)" stroke-width="2"/>
                                <circle cx="30" cy="30" r="25" fill="none" stroke="#22c55e" stroke-width="2"
                                        stroke-dasharray="157" stroke-dashoffset="8" stroke-linecap="round"
                                        class="satisfaction-circle"/>
                            </svg>
                        </div>
                    </div>
                </div>
                <div class="stat-content">
                    <div class="stat-number-container">
                        <div class="stat-number counter" data-target="98" data-suffix="%">0</div>
                        <div class="stat-rating">
                            <div class="stars">
                                <span class="star">★</span>
                                <span class="star">★</span>
                                <span class="star">★</span>
                                <span class="star">★</span>
                                <span class="star">★</span>
                            </div>
                            <span class="rating-text">4.9/5</span>
                        </div>
                    </div>
                    <div class="stat-label">Klant tevredenheid</div>
                    <div class="stat-description">Gemeten over 150+ projecten</div>
                </div>
                <div class="stat-glow stat-glow-green"></div>
                <div class="stat-particles">
                    <div class="particle particle-1"></div>
                    <div class="particle particle-2"></div>
                    <div class="particle particle-3"></div>
                </div>
            </div>

            <div class="stat-card stat-premium" data-gsap="slideUp" data-delay="0.2" data-tilt>
                <div class="stat-border"></div>
                <div class="stat-bg-pattern"></div>
                <div class="stat-icon-container">
                    <div class="stat-icon stat-icon-growth">
                        <BarChart3 size={28} class="stat-pulse" />
                        <div class="growth-chart">
                            <div class="chart-bar" style="height: 40%"></div>
                            <div class="chart-bar" style="height: 60%"></div>
                            <div class="chart-bar" style="height: 80%"></div>
                            <div class="chart-bar" style="height: 100%"></div>
                        </div>
                    </div>
                </div>
                <div class="stat-content">
                    <div class="stat-number-container">
                        <div class="stat-number counter" data-target="340" data-suffix="%">0</div>
                        <div class="stat-period">
                            <Globe size={14} />
                            <span>Gemiddeld per jaar</span>
                        </div>
                    </div>
                    <div class="stat-label">Revenue groei</div>
                    <div class="stat-description">Van onze e-commerce klanten</div>
                </div>
                <div class="stat-glow stat-glow-purple"></div>
                <div class="stat-particles">
                    <div class="particle particle-1"></div>
                    <div class="particle particle-2"></div>
                    <div class="particle particle-3"></div>
                </div>
            </div>

            <div class="stat-card stat-premium" data-gsap="slideUp" data-delay="0.3" data-tilt>
                <div class="stat-border"></div>
                <div class="stat-bg-pattern"></div>
                <div class="stat-icon-container">
                    <div class="stat-icon stat-icon-support">
                        <Clock size={28} class="stat-pulse" />
                        <div class="support-indicator">
                            <div class="status-dot online-dot"></div>
                            <div class="status-pulse"></div>
                        </div>
                    </div>
                </div>
                <div class="stat-content">
                    <div class="stat-number-container">
                        <div class="stat-number">24<span class="stat-suffix">/7</span></div>
                        <div class="stat-response">
                            <Zap size={14} />
                            <span>&lt; 2u response</span>
                        </div>
                    </div>
                    <div class="stat-label">Premium Support</div>
                    <div class="stat-description">Altijd beschikbaar voor je</div>
                </div>
                <div class="stat-glow stat-glow-orange"></div>
                <div class="stat-particles">
                    <div class="particle particle-1"></div>
                    <div class="particle particle-2"></div>
                    <div class="particle particle-3"></div>
                </div>
            </div>
        </div>

        <!-- Additional Stats Row -->
        <div class="stats-mini-grid">
            <div class="mini-stat" data-gsap="fadeUp" data-delay="0.4">
                <div class="mini-stat-icon">
                    <Users size={20} />
                </div>
                <div class="mini-stat-content">
                    <span class="mini-stat-number counter" data-target="50" data-suffix="+">0</span>
                    <span class="mini-stat-label">Happy Clients</span>
                </div>
            </div>
            <div class="mini-stat" data-gsap="fadeUp" data-delay="0.5">
                <div class="mini-stat-icon">
                    <Target size={20} />
                </div>
                <div class="mini-stat-content">
                    <span class="mini-stat-number counter" data-target="95" data-suffix="%">0</span>
                    <span class="mini-stat-label">Project Success</span>
                </div>
            </div>
            <div class="mini-stat" data-gsap="fadeUp" data-delay="0.6">
                <div class="mini-stat-icon">
                    <Zap size={20} />
                </div>
                <div class="mini-stat-content">
                    <span class="mini-stat-number">&lt;0.5s</span>
                    <span class="mini-stat-label">Avg Load Time</span>
                </div>
            </div>
            <div class="mini-stat" data-gsap="fadeUp" data-delay="0.7">
                <div class="mini-stat-icon">
                    <Activity size={20} />
                </div>
                <div class="mini-stat-content">
                    <span class="mini-stat-number">99.9%</span>
                    <span class="mini-stat-label">Uptime SLA</span>
                </div>
            </div>
        </div>
    </div>
    <div class="stats-background-glow"></div>
</section>