---
import LottieAnimation from '../ui/LottieAnimation.astro';

const features = [
  {
    title: 'Growth driven webdesign',
    description: 'UX-gedreven wireframes, high-end visuals en micro-animaties die vertrouwen wekken en bezoekers door de funnel sturen.',
    metric: 'Gem. sessieduur +52%',
    glow: 'rgba(130, 92, 255, 0.45)',
    icon: 'https://assets9.lottiefiles.com/packages/lf20_u4yrau.json',
  },
  {
    title: 'SEO & SEA als vliegwiel',
    description: 'Technische SEO, contentstructuur en winstgevende Google Ads campagnes die samen het leadvolume verhogen.',
    metric: 'Leadgroei +38%',
    glow: 'rgba(67, 168, 255, 0.42)',
    icon: 'https://assets9.lottiefiles.com/packages/lf20_jcikwtux.json',
  },
  {
    title: 'Automatisering & performance',
    description: 'Schaalbare infrastructuur op moderne stacks met API-koppelingen, CRM-integraties en realtime rapportage.',
    metric: 'Laadtijd &lt; 0,8s',
    glow: 'rgba(66, 218, 210, 0.32)',
    icon: 'https://assets2.lottiefiles.com/packages/lf20_touohxv0.json',
  },
];
---

<section id="services" class="orb-section" data-variant="violet">
  <span class="orb-bubble" style="--orb-x: 10%; --orb-y: -16%; --orb-size: 46rem; --orb-color: rgba(124, 58, 237, 0.34);"></span>
  <span class="orb-bubble" style="--orb-x: 88%; --orb-y: 72%; --orb-size: 38rem; --orb-color: rgba(37, 110, 235, 0.22);"></span>
  <span class="orb-bubble" style="--orb-x: 48%; --orb-y: 110%; --orb-size: 50rem; --orb-color: rgba(94, 52, 237, 0.18); --orb-opacity: 0.42; --orb-blur: 160px;"></span>

  <div class="orb-shell">
    <header class="orb-intro">
      <span class="orb-tag">Waar we het verschil maken</span>
      <h2 class="orb-title">Van eerste indruk tot conversie, alles werkt samen.</h2>
      <p class="orb-copy">
        Strategie, design en marketing zitten bij ons in één proces. Zo zorgen we dat jouw website snel laadt, vertrouwen wekt en campagnes direct kunnen opschalen.
      </p>
    </header>

    <div class="orb-grid orb-grid--feature">
      {features.map((feature, index) => (
        <article
          class="orb-card orb-card--feature interactive-card tilt-card"
          data-reveal
          style={`--reveal-delay: ${index * 0.08}s; --card-glow: ${feature.glow};`}
        >
          <span class="card-glow" aria-hidden="true"></span>
          <div class="orb-card__spark">
            <LottieAnimation src={feature.icon} class="orb-card__media" autoplay loop speed={1} mode="normal" aria-hidden="true" />
          </div>
          <div class="orb-card__badge">
            <span class="orb-chip orb-chip--ghost">Premium service</span>
          </div>
          <div class="orb-card__content">
            <h3 class="orb-card__title">{feature.title}</h3>
            <p class="orb-card__body">{feature.description}</p>
          </div>
          <div class="orb-card__footer">
            <span>Impact</span>
            <span class="orb-chip">{feature.metric}</span>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
