<script type="module">
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)');
  const isTouchViewport = window.matchMedia('(max-width: 768px)');
  const lowPowerThreads = navigator.hardwareConcurrency && navigator.hardwareConcurrency <= 4;

  const shouldSkipHero = prefersReducedMotion.matches || isTouchViewport.matches || lowPowerThreads;

  const loadHero = () =>
    import('/src/scripts/nexusHero.ts')
      .then(({ default: initNexusHero }) => {
        if (typeof initNexusHero === 'function') {
          initNexusHero();
        }
      })
      .catch((error) => {
        console.warn('[hero] init failed', error);
      });

  if (!shouldSkipHero) {
    if ('requestIdleCallback' in window) {
      requestIdleCallback(loadHero, { timeout: 1200 });
    } else {
      window.setTimeout(loadHero, 160);
    }
  }

  prefersReducedMotion.addEventListener?.('change', (event) => {
    if (!event.matches && !isTouchViewport.matches && !(navigator.hardwareConcurrency && navigator.hardwareConcurrency <= 4)) {
      loadHero();
    }
  });

  isTouchViewport.addEventListener?.('change', (event) => {
    if (!event.matches && !prefersReducedMotion.matches && !(navigator.hardwareConcurrency && navigator.hardwareConcurrency <= 4)) {
      loadHero();
    }
  });
</script>
