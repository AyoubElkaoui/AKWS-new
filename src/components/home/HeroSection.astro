---
import { Sparkles, ArrowRight, Play, Star } from 'lucide-astro';
import FloatingCards from './FloatingCards.astro';
---

<section class="hero-section" id="hero">
    <canvas id="hero-canvas" class="hero-canvas"></canvas>
    <div class="hero-grid"></div>
    <div class="hero-noise"></div>

    <div class="container">
        <div class="hero-content">
            <div class="hero-badge" data-gsap="fadeUp" data-delay="0">
                <div class="badge-dot"></div>
                <span data-splitting class="badge-text">Nieuwe websites vanaf â‚¬1,499</span>
                <div class="badge-shine"></div>
            </div>

            <h1 class="hero-title">
                <div class="hero-line" data-gsap="slideUp" data-delay="0.2">
                    <span data-splitting>Websites die</span>
                    <span class="hero-highlight">
                        <span class="highlight-text" data-splitting>converteren</span>
                        <div class="highlight-bg"></div>
                        <div class="highlight-sparkles">
                            <div class="sparkle sparkle-1"></div>
                            <div class="sparkle sparkle-2"></div>
                            <div class="sparkle sparkle-3"></div>
                        </div>
                    </span>
                </div>
                <div class="hero-line" data-gsap="slideUp" data-delay="0.4">
                    <span data-splitting>en</span>
                    <span class="gradient-text animated-gradient" data-splitting>resultaat leveren</span>
                </div>
            </h1>

            <p class="hero-description" data-gsap="fadeUp" data-delay="0.6" data-splitting>
                Van strategie tot implementatie. Wij bouwen digitale ervaringen die je klanten omzetten
                in groei voor jouw bedrijf. Performance-first, SEO-geoptimaliseerd, conversion-focused.
            </p>

            <div class="hero-cta" data-gsap="fadeUp" data-delay="0.8">
                <a href="/contact" class="btn btn-primary btn-magnetic btn-ripple" data-magnetic>
                    <span data-splitting class="btn-text">Start gratis analyse</span>
                    <div class="btn-icon">
                        <ArrowRight size={16} />
                    </div>
                    <div class="btn-bg"></div>
                    <div class="btn-shine"></div>
                </a>
                <a href="#demo" class="btn btn-ghost btn-magnetic btn-glass-morph" data-magnetic>
                    <div class="play-icon">
                        <Play size={14} />
                        <div class="play-pulse"></div>
                    </div>
                    <span data-splitting>Bekijk demo</span>
                </a>
            </div>

            <div class="hero-social-proof" data-gsap="fadeUp" data-delay="1">
                <div class="social-avatars">
                    <div class="avatar avatar-float avatar-glow" data-avatar="1">
                        <div class="avatar-ring"></div>
                    </div>
                    <div class="avatar avatar-float avatar-glow" data-avatar="2">
                        <div class="avatar-ring"></div>
                    </div>
                    <div class="avatar avatar-float avatar-glow" data-avatar="3">
                        <div class="avatar-ring"></div>
                    </div>
                    <div class="avatar avatar-float avatar-glow" data-avatar="4">
                        <div class="avatar-ring"></div>
                    </div>
                    <div class="avatar-count">
                        <span class="count-number">+50</span>
                        <div class="count-pulse"></div>
                    </div>
                </div>
                <div class="social-text">
                    <div class="rating">
                        <Star size={12} class="star-animate star-gold" />
                        <Star size={12} class="star-animate star-gold" />
                        <Star size={12} class="star-animate star-gold" />
                        <Star size={12} class="star-animate star-gold" />
                        <Star size={12} class="star-animate star-gold" />
                        <span class="rating-text">4.9</span>
                        <div class="rating-glow"></div>
                    </div>
                    <span class="social-label">Tevreden ondernemers</span>
                </div>
            </div>
        </div>
        <FloatingCards />
    </div>

    <div class="hero-gradient hero-gradient-animated" data-parallax-y="50"></div>
    <div class="hero-orbs">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
        <div class="orb orb-3"></div>
    </div>
</section>