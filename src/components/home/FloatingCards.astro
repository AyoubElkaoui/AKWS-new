---
import { TrendingUp, MousePointerClick, Layers, Zap, Activity, BarChart3 } from 'lucide-astro';
---

<div class="hero-visual" data-gsap="fadeUp" data-delay="1.2">
    <div class="visual-container">
        <!-- Performance Card -->
        <div class="floating-card card-metrics card-glow" data-tilt data-parallax-y="-50">
            <div class="card-border"></div>
            <div class="card-header">
                <div class="card-title">Performance</div>
                <div class="card-badge pulse-badge">
                    <span class="badge-dot live-dot"></span>
                    Live
                </div>
            </div>
            <div class="metrics-grid">
                <div class="metric metric-hover">
                    <div class="metric-icon">
                        <Zap size={16} />
                    </div>
                    <div class="metric-value counter" data-target="0.3" data-suffix="s">0</div>
                    <div class="metric-label">Load time</div>
                    <div class="metric-bar">
                        <div class="metric-fill" style="width: 95%"></div>
                    </div>
                </div>
                <div class="metric metric-hover">
                    <div class="metric-icon">
                        <Activity size={16} />
                    </div>
                    <div class="metric-value counter" data-target="98">0</div>
                    <div class="metric-label">Score</div>
                    <div class="metric-bar">
                        <div class="metric-fill" style="width: 98%"></div>
                    </div>
                </div>
            </div>
            <div class="card-glow-effect"></div>
        </div>

        <!-- Analytics Card -->
        <div class="floating-card card-analytics card-glow" data-tilt data-parallax-y="-30">
            <div class="card-border"></div>
            <div class="analytics-header">
                <div class="analytics-title">Traffic Growth</div>
                <div class="analytics-period">Last 30 days</div>
            </div>
            <div class="analytics-chart">
                <div class="chart-bars">
                    <div class="bar morph-bar bar-animated" data-height="60">
                        <div class="bar-tooltip">Week 1: +60%</div>
                    </div>
                    <div class="bar morph-bar bar-animated" data-height="80">
                        <div class="bar-tooltip">Week 2: +80%</div>
                    </div>
                    <div class="bar morph-bar bar-animated" data-height="45">
                        <div class="bar-tooltip">Week 3: +45%</div>
                    </div>
                    <div class="bar morph-bar bar-animated" data-height="95">
                        <div class="bar-tooltip">Week 4: +95%</div>
                    </div>
                    <div class="bar morph-bar bar-animated" data-height="70">
                        <div class="bar-tooltip">Week 5: +70%</div>
                    </div>
                    <div class="bar morph-bar bar-animated" data-height="100">
                        <div class="bar-tooltip">Week 6: +100%</div>
                    </div>
                </div>
                <div class="chart-gradient"></div>
            </div>
            <div class="analytics-footer">
                <TrendingUp size={16} class="trend-icon" />
                <span class="counter trend-number" data-target="247" data-suffix="%">0</span>
                <span class="trend-text">traffic increase</span>
                <div class="trend-sparkline">
                    <svg width="60" height="20" viewBox="0 0 60 20">
                        <path d="M0,15 Q15,10 30,12 T60,8" stroke="url(#sparklineGradient)" stroke-width="2" fill="none"/>
                        <defs>
                            <linearGradient id="sparklineGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                                <stop offset="0%" style="stop-color:#10b981;stop-opacity:0.8" />
                                <stop offset="100%" style="stop-color:#059669;stop-opacity:1" />
                            </linearGradient>
                        </defs>
                    </svg>
                </div>
            </div>
            <div class="card-glow-effect"></div>
        </div>

        <!-- Conversion Card -->
        <div class="floating-card card-conversion card-glow" data-tilt data-parallax-y="-70">
            <div class="card-border"></div>
            <div class="conversion-header">
                <div class="conversion-title">Conversion Rate</div>
                <div class="conversion-trend">â†— +12%</div>
            </div>
            <div class="conversion-ring-container">
                <div class="conversion-ring">
                    <svg width="80" height="80" viewBox="0 0 80 80">
                        <circle cx="40" cy="40" r="30" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="3"/>
                        <circle cx="40" cy="40" r="30" fill="none" stroke="url(#conversionGradient)" stroke-width="3"
                                stroke-dasharray="188" stroke-dashoffset="188" stroke-linecap="round"
                                class="conversion-circle"/>
                        <defs>
                            <linearGradient id="conversionGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                <stop offset="0%" style="stop-color:#10b981;stop-opacity:1" />
                                <stop offset="50%" style="stop-color:#059669;stop-opacity:1" />
                                <stop offset="100%" style="stop-color:#047857;stop-opacity:1" />
                            </linearGradient>
                        </defs>
                    </svg>
                    <div class="ring-center">
                        <div class="ring-percentage counter" data-target="83" data-suffix="%">0</div>
                        <div class="ring-label">CVR</div>
                    </div>
                    <div class="ring-particles">
                        <div class="particle particle-1"></div>
                        <div class="particle particle-2"></div>
                        <div class="particle particle-3"></div>
                    </div>
                </div>
            </div>
            <div class="conversion-stats">
                <div class="stat-mini">
                    <span class="stat-mini-value">1,247</span>
                    <span class="stat-mini-label">Visitors</span>
                </div>
                <div class="stat-divider"></div>
                <div class="stat-mini">
                    <span class="stat-mini-value">1,034</span>
                    <span class="stat-mini-label">Conversions</span>
                </div>
            </div>
            <div class="card-glow-effect"></div>
        </div>

        <!-- CTR Card -->
        <div class="floating-card card-cursor card-glow" data-parallax-y="-20">
            <div class="card-border"></div>
            <div class="cursor-header">
                <div class="cursor-icon-container">
                    <MousePointerClick size={20} class="cursor-icon" />
                    <div class="cursor-trail-effect">
                        <div class="trail-dot"></div>
                        <div class="trail-dot"></div>
                        <div class="trail-dot"></div>
                    </div>
                </div>
            </div>
            <div class="cursor-stats">
                <div class="cursor-main-stat">
                    <span class="cursor-ctr counter" data-target="12.4" data-suffix="%">0</span>
                    <span class="cursor-label">Click-through Rate</span>
                </div>
                <div class="cursor-breakdown">
                    <div class="breakdown-item">
                        <span class="breakdown-value">2.3K</span>
                        <span class="breakdown-label">Clicks</span>
                    </div>
                    <div class="breakdown-item">
                        <span class="breakdown-value">18.5K</span>
                        <span class="breakdown-label">Impressions</span>
                    </div>
                </div>
            </div>
            <div class="card-glow-effect"></div>
        </div>

        <!-- Layers Card -->
        <div class="floating-card card-layers card-glow" data-parallax-y="-40">
            <div class="card-border"></div>
            <div class="layers-container">
                <div class="layers-icon-wrapper">
                    <Layers size={24} class="layers-icon" />
                    <div class="layers-glow"></div>
                </div>
                <div class="layers-stack">
                    <div class="layer-item layer-1">
                        <span class="layer-label">Frontend</span>
                        <div class="layer-progress" style="width: 100%"></div>
                    </div>
                    <div class="layer-item layer-2">
                        <span class="layer-label">Backend</span>
                        <div class="layer-progress" style="width: 95%"></div>
                    </div>
                    <div class="layer-item layer-3">
                        <span class="layer-label">Database</span>
                        <div class="layer-progress" style="width: 88%"></div>
                    </div>
                </div>
                <div class="layers-status">
                    <div class="status-dot status-online"></div>
                    <span class="status-text">All systems operational</span>
                </div>
            </div>
            <div class="card-glow-effect"></div>
        </div>

        <!-- SEO Score Card -->
        <div class="floating-card card-seo card-glow" data-parallax-y="-60">
            <div class="card-border"></div>
            <div class="seo-header">
                <div class="seo-title">SEO Score</div>
                <div class="seo-badge seo-excellent">Excellent</div>
            </div>
            <div class="seo-score-circle">
                <div class="score-ring">
                    <div class="score-fill" style="--score: 96"></div>
                    <div class="score-center">
                        <span class="score-number counter" data-target="96">0</span>
                        <span class="score-total">/100</span>
                    </div>
                </div>
            </div>
            <div class="seo-metrics">
                <div class="seo-metric">
                    <div class="metric-dot metric-perfect"></div>
                    <span class="metric-text">Performance</span>
                    <span class="metric-score">100</span>
                </div>
                <div class="seo-metric">
                    <div class="metric-dot metric-good"></div>
                    <span class="metric-text">Accessibility</span>
                    <span class="metric-score">94</span>
                </div>
                <div class="seo-metric">
                    <div class="metric-dot metric-perfect"></div>
                    <span class="metric-text">Best Practices</span>
                    <span class="metric-score">100</span>
                </div>
            </div>
            <div class="card-glow-effect"></div>
        </div>
    </div>
</div>